<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.inputgrade.InputGradeFragment">


    <EditText
        android:id="@+id/gradle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="@string/digite_sua_nota"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/avaliar"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/gradle"
        app:layout_constraintStart_toStartOf="@+id/gradle"
        app:layout_constraintTop_toBottomOf="@+id/gradle" />
</androidx.constraintlayout.widget.ConstraintLayout>